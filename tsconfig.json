{
  "compilerOptions": {
    "target": "ESNext", // Keep for latest JS features
    "module": "ESNext", // Let esbuild handle modules
    "moduleResolution": "node", // Use NodeNext for module resolution
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "./dist"
  },
  "exclude": ["node_modules"]
}
