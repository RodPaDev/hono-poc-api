{
  "name": "fsm",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @fsm/api --filter @fsm/client --parallel run dev",
    "api:dev": "pnpm --filter api dev",
    "client:dev": "pnpm --filter client dev",
    "build": "pnpm --filter \"*\" build",
    "api:build": "pnpm --filter api build",
    "client:build": "pnpm --filter client build",
    "lint": "pnpm --filter \"*\" lint",
    "api:lint": "pnpm --filter api lint",
    "client:lint": "pnpm --filter client lint",
    "start": "pnpm --filter @fsm/api --filter @fsm/client --parallel run start",
    "api:start": "pnpm --filter api start",
    "client:start": "pnpm --filter client start"
  },
  "devDependencies": {
    "@types/node": "22.15.23",
    "@typescript-eslint/eslint-plugin": "8.33.0",
    "@typescript-eslint/parser": "8.33.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-prettier": "5.4.0",
    "eslint-plugin-react-refresh": "0.4.20"
  },
  "dependencies": {
    "@eslint/js": "9.27.0",
    "chalk": "5.4.1",
    "esbuild": "0.25.5",
    "eslint": "9.27.0",
    "hono": "4.7.10",
    "typescript": "5.8.3",
    "typescript-eslint": "8.33.0",
    "zod": "3.25.32"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "@tailwindcss/oxide",
      "esbuild"
    ]
  },
  "engines": {
    "node": ">=22.16.0",
    "pnpm": ">=10.11.0"
  }
}
